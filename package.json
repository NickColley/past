{
  "name": "past",
  "version": "0.0.8",
  "type": "module",
  "description": "Next.js inspired opinionated framework focusing on the boring past",
  "main": "index.mjs",
  "bin": {
    "past": "index.mjs"
  },
  "scripts": {
    "test": "npm run lint && npm run ava",
    "ava": "NODE_OPTIONS=--loader=esmock ava",
    "lint": "eslint *.js && prettier --check *.js"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NickColley/past.git"
  },
  "homepage": "https://github.com/NickColley/past#readme",
  "engines": {
    "node": "^16.14.2"
  },
  "dependencies": {
    "body-parser": "^1.20.0",
    "express": "^4.18.1",
    "nodemon": "^2.0.19",
    "nunjucks": "^3.2.3",
    "rollup": "^2.78.1",
    "sass": "^1.54.5"
  },
  "devDependencies": {
    "ava": "^4.3.3",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "esmock": "^1.9.7",
    "memfs": "^3.4.7",
    "prettier": "^2.7.1"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ],
      "node/no-unpublished-import": "off",
      "node/no-missing-import": "off"
    }
  }
}
