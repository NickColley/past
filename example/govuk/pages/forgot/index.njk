{% extends "../../layouts/main.njk" %}

{% from "node_modules/govuk-frontend/govuk/components/back-link/macro.njk" import govukBackLink %}

{% block pageTitle %}
    Forgot password | {{ super() }}
{% endblock %}

{% block beforeContent %}
    {{ govukBackLink({
    text: "Back",
    href: "/"
    }) }}
{% endblock %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-l">Forgot password</h1>
            <button class="magic-button">Magic button</button>
        </div>
    </div>
{% endblock %}

{% block head %}
    {{ super() }}
    <link rel="stylesheet" href="/forgot/index.css">
{% endblock %}

{% block bodyEnd %}
    {{ super() }}
    <script src="/forgot/index.client.js"></script>
{% endblock %}
