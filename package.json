{
  "name": "past",
  "version": "0.0.0-development",
  "type": "module",
  "description": "Web framework from the past",
  "bin": "bin/past.cjs",
  "scripts": {
    "test": "npm run lint && npm run ava",
    "ava": "NODE_OPTIONS='--no-warnings --loader=esmock' c8 ava",
    "lint": "eslint src/**/*.mjs src/**/*.js bin/past.cjs && prettier --check src/**/*.mjs src/**/*.js bin/past.cjs",
    "semantic-release": "semantic-release",
    "commit": "commit"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/NickColley/past.git"
  },
  "homepage": "https://github.com/NickColley/past#readme",
  "engines": {
    "node": "^16.14.2"
  },
  "dependencies": {
    "body-parser": "^1.20.0",
    "chalk": "^5.0.1",
    "chokidar": "^3.5.3",
    "commander": "^9.4.0",
    "compression": "^1.7.4",
    "cookie-session": "^2.0.0",
    "express": "^4.18.1",
    "get-port": "^6.1.2",
    "nunjucks": "^3.2.3",
    "rehype-sanitize": "^5.0.1",
    "rehype-stringify": "^9.0.3",
    "remark-parse": "^10.0.1",
    "remark-rehype": "^10.1.0",
    "rollup": "^2.78.1",
    "sass": "^1.54.5",
    "string-replace-middleware": "^1.0.2",
    "unified": "^10.1.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@commitlint/prompt-cli": "^17.1.2",
    "ava": "^4.3.3",
    "c8": "^7.12.0",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "esmock": "^1.9.7",
    "memfs": "^3.4.7",
    "prettier": "^2.7.1",
    "semantic-release": "^19.0.5"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits"
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ],
      "node/no-unpublished-import": "off",
      "node/no-missing-import": "off"
    },
    "parserOptions": {
      "ecmaVersion": 2022
    }
  },
  "c8": {
    "100": "false",
    "reporter": [
      "lcovonly",
      "text"
    ],
    "all": "true",
    "exclude": [
      "node_modules/",
      "examples/",
      "coverage/",
      "**/*.test.js"
    ]
  }
}
